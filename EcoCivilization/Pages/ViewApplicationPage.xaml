<Page x:Class="EcoCivilization.Pages.ViewApplicationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:EcoCivilization.Pages"
      AutomationProperties.Name="{Binding Title, RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FF52C3A8"
      Title="ViewApplicationPage">

    <materialDesign:DialogHost DialogTheme="Inherit"
                             Identifier="RootDialog"
                             SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">

        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}" 
                                   LeftDrawerBackground="#FFCFF4D2">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="350">
                    <StackPanel>
                        <TextBlock Text="Меню"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               Foreground="#FF215273"
                               Margin="10"/>
                        <Button x:Name="btnMainApplication"
                                Content="Главная страница"
                                HorizontalAlignment="Center"
                                Background="#FF52C3A8"
                                Foreground="#FFCFF4D2"
                                FontSize="30"
                                Height="50"
                                Width="300"
                                Margin="10"
                                Click="btnMainApplication_Click"/>
                        <Button x:Name="btnAddApplication"
                                Content="Подать заявку"
                                HorizontalAlignment="Center"
                                Background="#FF52C3A8"
                                Foreground="#FFCFF4D2"
                                FontSize="30"
                                Height="50"
                                Width="300"
                                Margin="10"
                                Click="btnAddApplication_Click"/>
                        <Button x:Name="btnStatistic"
                                Content="Статистика"
                                HorizontalAlignment="Center"
                                Background="#FF52C3A8"
                                Foreground="#FFCFF4D2"
                                FontSize="30"
                                Height="50"
                                Width="300"
                                Margin="10"
                                Click="btnStatistic_Click"/>
                        <Button x:Name="btnExit"
                                Content="Выйти"
                                HorizontalAlignment="Center"
                                Background="#FF52C3A8"
                                Foreground="#FFCFF4D2"
                                FontSize="30"
                                Height="50"
                                Margin="10"
                                Click="btnExit_Click"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <DockPanel>
                <materialDesign:ColorZone Padding="16"
                                  DockPanel.Dock="Top"
                                  Mode="PrimaryMid" 
                                  Background="#FFCFF4D2">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton x:Name="MenuToggleButton"
                            AutomationProperties.Name="HamburgerToggleButton"
                            IsChecked="False"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <Button x:Name="btnRedaction"
                                    Content="Редактировать"
                                    Margin="0, 0, 20, 0"
                                    HorizontalAlignment="Center"
                                    Background="#FF52C3A8"
                                    Foreground="#FFCFF4D2"
                                    Visibility="Hidden"
                                    Click="btnRedactionClick"/>
                            <Image x:Name="img_icon"
                                   Source="/img/icon2.png"
                                   Width="50"
                                   Height="50"/>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="lvPictures"
                              Grid.Row="1" Grid.RowSpan="5"
                               Grid.Column="0" Grid.ColumnSpan="12"
                              ItemsSource="{Binding PhotoApplication}" 
                              HorizontalAlignment="Center">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Photo}"
                                        Width="{Binding Application.PhotoWidth}"
                                        Height="{Binding Application.PhotoHeight}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock Text="{Binding Name}"
                               Grid.Column="2" Grid.ColumnSpan="3"
                               Grid.Row="6"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontSize="40"
                               FontWeight="Bold"
                               Margin="0, 20, 0, 0"
                               Foreground="#FF215273"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                    <TextBlock Text="{Binding Description}"
                               Grid.Column="1" Grid.ColumnSpan="5"
                               Grid.Row="7"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Margin="0, 20, 0, 0"
                               Foreground="#FF215273"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock Text="{Binding Place, StringFormat={}Место проведения: {0}}"
                               Grid.Column="1" Grid.ColumnSpan="5"
                               Grid.Row="8"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Foreground="#FF215273"
                               TextAlignment="Center">
                    </TextBlock>

                    <TextBlock Text="Город:"
                               Grid.Column="1"
                               Grid.Row="9"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Margin="0, 20, 5, 0"
                               Foreground="#FF215273"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock Text="{Binding City.Name}"
                               Grid.Column="2"
                               Grid.Row="9"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Margin="0, 20, 0, 0"
                               Foreground="#FF215273"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock Text="Дата и время:"
                               Grid.Column="4"
                               Grid.Row="9"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Margin="0, 20, 5, 0"
                               Foreground="#FF215273"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock Name="tbDateTime"
                               Grid.Column="5" Grid.ColumnSpan="2"
                               Grid.Row="9"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="30"
                               Margin="0, 20, 0, 0"
                               Foreground="#FF215273"
                               TextAlignment="Center">
                        <Run Text="{Binding Date, StringFormat=dd.MM.yyyy, ConverterCulture=ru}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding TimeStart, StringFormat={}{0:hh}:{0:mm}}"/>
                    </TextBlock>
                    <ProgressBar x:Name="pbCountUser"
                                 Grid.Column="1" Grid.ColumnSpan="4"
                                 Minimum="0" 
                                 Maximum="{Binding Count_User}"
                                 Grid.Row="10"
                                 Height="35"
                                 Value="6"
                                 Background="#FFCFF4D2"/>
                    
                    <TextBlock Name="tbProgressMin"
                               Grid.Column="1" Grid.ColumnSpan="4"
                               Grid.Row="10"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="10, 0, 0, 0"
                               FontSize="25"
                               Foreground="#FF215273">
                        <Run Text="{Binding ElementName=pbCountUser, Path=Value}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding ElementName=pbCountUser, Path=Maximum}"/>
                    </TextBlock>
                    
                    <Button x:Name="btnSignUp"
                            Content="Участвовать!"
                            Grid.Column="5" Grid.ColumnSpan="2"
                            Grid.Row="10"
                            FontSize="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Height="50"
                            Background="#FFCFF4D2"
                            Foreground="#FF52C3A8"
                            Margin="10, 0, 0, 0"
                            Click="btnSignUp_Click"/>

                    <Button x:Name="btnPartisipant"
                            Content="Участники"
                            Grid.Column="5" Grid.ColumnSpan="2"
                            Grid.Row="10"
                            FontSize="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Height="50"
                            Background="#FFCFF4D2"
                            Foreground="#FF52C3A8"
                            Margin="10, 0, 0, 0"
                            Visibility="Hidden"
                            Click="btnpartisipantClick" Cursor="Hand"/>

                    <Button x:Name="btnAnnul"
                            Content="Отказаться"
                            Grid.Column="5" Grid.ColumnSpan="2"
                            Grid.Row="10"
                            FontSize="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Height="50"
                            Background="#FFCFF4D2"
                            Foreground="#FF52C3A8"
                            Margin="10, 0, 0, 0"
                            Visibility="Hidden"
                            Click="btnAnnul_Click"/>

                    <TextBlock x:Name="tbAchived"
                               Text="Цель достигнута!"
                               Grid.Column="1" Grid.ColumnSpan="4"
                               Grid.Row="10"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FF215273"
                               FontSize="40"
                               Visibility="Hidden"/>
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Page>
